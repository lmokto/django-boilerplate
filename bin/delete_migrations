#!/usr/bin/env bash

PROJECT_ROOT=$(dirname $(dirname $(readlink -f $0)))
SRC_ROOT="$PROJECT_ROOT/src"

find $SRC_ROOT -name "migrations" -exec rm -rf {} \;

echo "Eliminados los directorios migrations"

echo "Usar ./manage.py makemigrations nombre_app"
echo "y ./manage.py migrate --fake-initial si la base de datos ya estaba creada."
